@model VehicleManagementSystem.Models.Vehicles
@{
    ViewBag.Title = "   Add engine to vehicle. ";
}


<div style=" display: block; vertical-align: middle;  ">
    <h1>@ViewBag.Title</h1>
</div>

@Html.AntiForgeryToken()

<div class="container-fluid " style=" display: block; vertical-align: middle;  ">
    <div class="row" style=" display: inline-block; vertical-align: middle;  ">

        @for (int i = 0; i < ViewBag.enginesLength; i++)
        {
            <!-- for one engine  -->
            <div class="card col-lg-4 " style="  width: 18rem; background-color: #DCDCDC; margin-right: 10px;">
                <img src="~/Content/Images/engine.jpg" class="card-img-top" style="width:100%; height:60%;" alt="...">
                <div class="card-body" style="margin: auto; text-align: center ">
                    <h3 class="card-title"><b>     @ViewBag.engines[i].EngineType </b></h3>

                    @using (Html.BeginForm("ChooseEngineType", "Vehicle", new
                    {
                        engineType = @ViewBag.engines[i].EngineType,
                        vehicleID = @ViewBag.Vehicle.VehicleGUID
                    }))
                    {
                        <p class="card-text">Description .</p>
                        <p class="card-text">fdsfsdfsdfsdfsd.</p>
                        <button class="btn btn-primary" type="submit">  Press here   </button>
                    }
                </div>
            </div>
        }



    </div>
</div>